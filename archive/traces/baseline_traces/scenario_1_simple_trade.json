{
  "description": "Scenario 1: Simple Single Trade",
  "purpose": "Verify basic bid/ask submission and trade execution when buyer accepts",
  "setup": {
    "num_buyers": 2,
    "num_sellers": 2,
    "num_times": 3,
    "min_price": 0,
    "max_price": 200,
    "seed": 42
  },
  "agents": [
    {
      "player_id": 1,
      "is_buyer": true,
      "num_tokens": 2,
      "valuations": [100, 90]
    },
    {
      "player_id": 2,
      "is_buyer": true,
      "num_tokens": 2,
      "valuations": [95, 85]
    },
    {
      "player_id": 1,
      "is_buyer": false,
      "num_tokens": 2,
      "valuations": [70, 75]
    },
    {
      "player_id": 2,
      "is_buyer": false,
      "num_tokens": 2,
      "valuations": [72, 78]
    }
  ],
  "timesteps": [
    {
      "time": 1,
      "actions": {
        "bids": {
          "1": 95,
          "2": 90
        },
        "asks": {
          "1": 80,
          "2": 85
        },
        "buyer_accepts": {
          "1": true
        },
        "seller_accepts": {
          "1": false
        }
      },
      "expected_outcomes": {
        "high_bidder": 1,
        "high_bid": 95,
        "low_asker": 1,
        "low_ask": 80,
        "buyer_accepted": true,
        "seller_accepted": false,
        "trade_price": 80,
        "comment": "Only buyer accepts → trade at ask price (80)"
      }
    },
    {
      "time": 2,
      "actions": {
        "bids": {
          "2": 88
        },
        "asks": {
          "2": 83
        },
        "buyer_accepts": {
          "2": false
        },
        "seller_accepts": {
          "2": false
        }
      },
      "expected_outcomes": {
        "high_bidder": 2,
        "high_bid": 88,
        "low_asker": 2,
        "low_ask": 83,
        "buyer_accepted": false,
        "seller_accepted": false,
        "trade_price": 0,
        "comment": "Neither accepts → no trade, orders carry over"
      }
    },
    {
      "time": 3,
      "actions": {
        "bids": {},
        "asks": {},
        "buyer_accepts": {
          "2": false
        },
        "seller_accepts": {
          "2": true
        }
      },
      "expected_outcomes": {
        "high_bidder": 2,
        "high_bid": 88,
        "low_asker": 2,
        "low_ask": 83,
        "buyer_accepted": false,
        "seller_accepted": true,
        "trade_price": 88,
        "comment": "Orders carried over, seller accepts → trade at bid price (88)"
      }
    }
  ]
}
